  "private": true,
  "description": "",
  "main": "index.js",
  "author": "RGBboy <l-_-l@rgbboy.com>",
  "dependencies": {
    "suitcss-base": "^0.8.0",
    "suitcss-components-arrange": "^0.6.2",
    "suitcss-components-button": "^4.0.0",
    "suitcss-utils-position": "^0.2.2",
    "suitcss-utils-text": "^0.4.2"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "ecstatic": "^1.4.0",
    "elm": "^0.18.0",
    "fs-path": "0.0.23",
    "postcss-calc": "^6.0.0",
    "postcss-cli": "^4.1.0",
    "postcss-css-variables": "^0.8.0",
    "postcss-import": "^10.0.0",
    "uglify-js": "^3.0.17"
  },
  "scripts": {
    "build": "npm run build:client && npm run build:html && npm run build:css",
    "build:client": "elm-make ./src/Main.elm --output ./build/index.js && uglifyjs ./build/index.js --compress --mangle --output ./build/index.min.js",
    "build:css": "postcss ./lib/style.css --no-map --use postcss-import postcss-css-variables postcss-calc --output ./build/style.css",
    "build:html": "elm-make ./src/Build.elm --output /tmp/elm.js && node build /tmp/elm.js",
    "dev": "chokidar 'src/*.elm' -c 'npm run build:client'",
    "start": "ecstatic ./build --port 8080",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "MIT"
}
